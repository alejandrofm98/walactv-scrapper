:80 {
    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Proxy para manifest.m3u8
    handle /ace/manifest/* {
        uri strip_prefix /ace/manifest
        reverse_proxy acestream-arm:6878 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Proxy para getstream
    handle /ace/getstream/* {
        uri strip_prefix /ace/getstream
        reverse_proxy acestream-arm:6878 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}

            # Timeout m√°s largo para streaming
            transport http {
                dial_timeout 30s
                response_header_timeout 0
                read_buffer 8192
            }
        }
    }

    # Proxy para webui (opcional)
    handle /webui/* {
        reverse_proxy acestream-arm:6878 {
            header_up Host {upstream_hostport}
        }
    }

    # Proxy general para cualquier otra ruta de acestream
    handle /* {
        reverse_proxy acestream-arm:6878 {
            header_up Host {upstream_hostport}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }
}