FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias
COPY docker/config/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar aplicaci√≥n
COPY scripts/iptv_proxy.py .

EXPOSE 3000

# Usar gunicorn para mejor rendimiento
CMD ["gunicorn", "--bind", "0.0.0.0:3000", "--workers", "4", "--threads", "2", "--timeout", "300", "proxy:app"]