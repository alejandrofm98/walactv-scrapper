# Dockerfile-acestream-init
FROM alpine:latest

# Instalar dependencias
RUN apk add --no-cache curl jq bash

# Copiar y preparar el script
COPY acestream-init.sh /acestream-init.sh
RUN chmod +x /acestream-init.sh && \
    sed -i 's/\r$//' /acestream-init.sh 2>/dev/null || true

# Establecer el comando por defecto
CMD ["/acestream-init.sh"]