# Dockerfile
FROM jopsis/acestream:arm64-v3.2.14-update

# instalar jq y curl para hacer las peticiones
RUN apk add --no-cache curl jq

# copiar nuestro script que hace las peticiones
COPY docker/post_start.sh /post_start.sh
RUN chmod +x /post_start.sh

# dejamos el entrypoint original
ENTRYPOINT ["/acestream/acestreamengine/acestream.sh"]  # o dejar el entrypoint original sin tocar

# ejecutamos nuestro script despu√©s del arranque usando command
CMD ["/post_start.sh"]
